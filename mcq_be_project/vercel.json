{
    "version": 2,
    "builds": [
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "command": "chmod +x build_files.sh && ./build_files.sh",
          "distDir": "dist"
        }
      },
      {
        "src": "wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "wsgi.py"
      }
    ]
}